                    </ul>
                </div>
            </div>
            <br />
        @:</div>
    }
    
             
    @{
        if (ViewBag.IsStaging)
        {
            <div style="color:red; font-size:x-large"><br />Stage Stage Stage Stage Stage Stage Stage Stage Stage Stage Stage Stage Stage Stage</div>
        }
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <span>&copy; @DateTime.Now.Year - Awesome Web App</span>
            <span style="padding-left: 15px;">Served from: <strong>@ViewBag.Environment</strong></span>
            <span style="padding-left: 15px;">Machine Name: <strong>@ViewBag.MachineName</strong></span>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
